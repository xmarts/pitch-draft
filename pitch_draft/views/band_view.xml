<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_band_tree" model="ir.ui.view">
            <field name="name">band.tree</field>
            <field name="model">band</field>
            <field name="arch" type="xml">
                <tree string="Bandas">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_band_form" model="ir.ui.view">
            <field name="name">band.form</field>
            <field name="model">band</field>
            <field name="arch" type="xml">
                <form string="Bandas">
                    <header>
                        <button name="action_signed" type="object" class="btn-primary" string="Inscribir" attrs="{'invisible': [('control_band', '=', True)]}"/>
                        <field name="stage_band_id" widget="statusbar" options="{'clickable': '1'}"/>
                      </header>
                      <sheet string="Bandas">
                        <field name="kanban_state" widget="state_selection"/>
                        <widget name="web_ribbon" text="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/>
                        <field class="oe_avatar" options="{&quot;size&quot;: [0, 90]}" widget="image" name="foto0"/>
                        <div class="oe_title">
                                    <h1>
                                        <field name="name" required="1" placeholder="Name..."/>
                                    </h1>
                                </div>
                        <group name="gruoup_gene">
                          <group name="group_left">
                            <field name="partner_id" required="1" />
                            <field name="partner_phone" widget="phone" options="{'enable_sms': True}"/>
                            <field name="partner_email" widget="email"/>
                          </group>
                          <group name="group_right">
                            <field name="band_tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="que_ofrece" required="1"/>
                            <field name="control_band" invisible='1'/>
                          </group>
                        </group>
                        <notebook>
                            <page string="Información General" name="information_gene">
                              <group name="group_0">
                                <group name="group_0_1" string="Redes">
                                  <field name="facebook" string="Facebook" widget='url'/>
                                  <field name="instagram" string="Instagram" widget='url'/>
                                  <field name="tik_tok" string="Tik Tok" widget='url'/>
                                  <field name="youtube" string="Youtube" widget='url'/>
                                  <field name="website" string="Website" widget='url'/>
                                  <field name="video_envivo" widget='url'/>
                                  <field name="spotify" widget='url'/>
                                  <field name="liga_informacin_extra" string="Liga información extra"/>
                                  <field name="cargar_presskit" filename="cargar_presskit_file_name"/>
                                  <field name="cargar_presskit_file_name" invisible="1"/>
                                  <field name="cargar_rider" filename="cargar_rider_file_name"/>
                                  <field name="cargar_rider_file_name" invisible="1"/>
                                </group>
                                <group name="group_0_2" string="Info">
                                  <field name="informacin_general" string="Descripción del proyecto" required="1"/>
                                  <field name="tenido_patrosinio"/>
                                  <field name="marca" attrs="{'invisible': [('tenido_patrosinio', '=', False)],'required': [('tenido_patrosinio', '=', True)]}"/>
                                  <field name="marca_detallee" attrs="{'invisible': [('tenido_patrosinio', '=', False)],'required': [('tenido_patrosinio', '=', True)]}"/>
                                  <field widget="image" options="{&quot;size&quot;: [0, 90]}" name="foto1" string="Foto 1"/>
                                  <field widget="image" options="{&quot;size&quot;: [0, 90]}" name="foto2" string="Foto 2"/>
                                  <field widget="image" options="{&quot;size&quot;: [0, 90]}" name="foto3" string="Foto 3"/>
                                  <field widget="image" options="{&quot;size&quot;: [0, 90]}" name="foto4" string="Foto 4"/>
                                </group>
                              </group>
                            </page>
                            <page string="Comentarios" name="comments" groups="pitch_draft.group_eva_1,pitch_draft.group_eva_2,pitch_draft.group_eva_3,pitch_draft.group_eva_4,pitch_draft.group_banda,pitch_draft.group_admin">
                              <!-- <group name="group_1">
                                <group name="group_1_1">
                                  <field name="evaluador_1" string="Evaluador 1" groups="pitch_draft.group_eva_1,pitch_draft.group_banda"/>
                                  <field name="evaluador_2" string="Evaluador 2" groups="pitch_draft.group_eva_2,pitch_draft.group_banda"/>
                                </group>
                                <group name="group_1_2">
                                    <field name="evaluador_3" string="Evaluador 3" groups="pitch_draft.group_eva_3,pitch_draft.group_banda"/>
                                    <field name="evaluador_4" string="Evaluador 4" groups="pitch_draft.group_eva_4,pitch_draft.group_banda"/>
                                </group>
                              </group> -->
                              <field name="evaluation_ids" widget="one2many" nolabel="1">
                                <tree name="evaluation_ids_tree" editable="bottom" no_open="1">
                                    <field name="user_id" />
                                    <field name="comentario" />
                                    <field name="puntacion" sum="puntacion"/>                                    
                                </tree>
                                <form name="evaluation_ids_form">
                                    <group>
                                        <field name="user_id" />
                                        <field name="comentario" />
                                        <field name="puntacion" /> 
                                    </group>
                                </form>
                            </field>
                            </page>
                          </notebook>
                      </sheet>
                      <div class="oe_chatter" name="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                      </div>
                </form>
            </field>
        </record>

        <record id="account_band_view_kanban" model="ir.ui.view">
            <field name="name">band.kanban</field>
            <field name="model">band</field>
            <field name="arch" type="xml">
                 <kanban default_group_by="stage_band_id" default_order="priority desc, sequence asc, id desc">  <!--default_order="x_studio_priority desc, x_studio_sequence asc, id desc" -->
                    
                    <field name="stage_band_id"/>  
                    <field name="color"/>
                    <field name="sequence"/>
                    <field name="id"/>
                    <field name="foto0" />
                    <field name="foto1" />
                    <field name="band_tags_ids" />
                    <progressbar field="kanban_state" colors="{&quot;normal&quot;: &quot;200&quot;, &quot;done&quot;: &quot;success&quot;, &quot;blocked&quot;: &quot;danger&quot;}"/>
                    <templates>
                      <t t-name="kanban-box">
                        <div class="o_kanban_record oe_kanban_global_click o_kanban_record_has_image_fill" color="color">
                          <field class="o_kanban_image_fill_left" name="foto0" widget="image" options="{&quot;zoom&quot;: true, &quot;background&quot;: true, &quot;preventClicks&quot;: false}"/>
                          <div class="o_kanban_record_details">
                            <div class="o_kanban_record_top" name="studio_auto_kanban_top">
                              <div class="o_kanban_record_headings" name="studio_auto_kanban_headings">
                                <field name="priority" widget="boolean_favorite" nolabel="1"/>
                                <strong class="o_kanban_record_title" name="studio_auto_kanban_title">
                                  <field name="name"/>
                                </strong>
                              </div>
                              <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" data-display="static" href="#" aria-label="Menú desplegable" title="Menú desplegable">
                                  <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                  <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Editar</a>
                                  <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Eliminar</a>
                                  <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                              </div>
                            </div>
                            <div class="o_kanban_record_body" name="studio_auto_kanban_body">
                              <field name="band_tags_ids" options="{'color_field': 'color'}"/>
                            </div>
                            <div class="o_kanban_record_bottom" name="studio_auto_kanban_bottom">
                              <div class="oe_kanban_bottom_left" name="studio_auto_kanban_bottom_left"/>
                              <div class="oe_kanban_bottom_right" name="studio_auto_kanban_bottom_right">
                                <field name="kanban_state" widget="state_selection"/>
                              </div>
                            </div>
                          </div>
                        </div>
                      </t>
                    </templates>
                  </kanban>
            </field>
        </record>
    </data>
</odoo>